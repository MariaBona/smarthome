<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/../stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <p>Controller status is: <%= controller_status %></p>
    <div class="row">
      <div class="column">
        <p>Smart Lights:</p>
        <div class="list-group">
          <% lights.forEach((light) => { %>
            <div class="list-group-item">
              <a href="/?light_id=<%= light.id %>&on=<%= light.on=='ON'?0:1%>">
                <h4 class="list-group-item-heading"><%= light.name %></h4>
              </a>
              <p class="list-group-item-text"><%= light.on %></p>
            </div>
          <% }) %>
        </div>
      </div>
      <div class="column">
        <p>Thermostats:</p>
        <div class="list-group">
          <% thermos.forEach((therm) => { %>
            <div class="list-group-item">
              <h4 class="list-group-item-heading"><%= therm.name %></h4>
              <p class="list-group-item-text">Current: <%= therm.current_temp %></p>
              <p class="list-group-item-text">Target: <%= therm.target_temp %></p>
              <p class="list-group-item-text">Heating: <%= therm.requesting_heat %></p>
              <a href="/?therm_id=<%= therm.id %>&temperature=<%= parseFloat(therm.target_temp)+0.5%>">UP(+)</a>
              <a href="/?therm_id=<%= therm.id %>&temperature=<%= parseFloat(therm.target_temp)-0.5%>">DOWN(-)</a>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
